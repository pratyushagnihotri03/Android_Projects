<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mitworkproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ColorsActivity"
            android:label="@string/colorsActivity_name"/>
        <activity android:name=".FamilyActivity"
            android:label="@string/familyActivity_name"/>
        <activity android:name=".PhrasesActivity"
            android:label="@string/phrasesActivity_name"/>
        <activity android:name=".NumbersActivity"
            android:label="@string/numbersActivity_name"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>